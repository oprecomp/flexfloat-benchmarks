TARGET = jacobi_flex

FLEXFLOAT_LIB_DIR  ?= ../../flexfloat/build
FLEXFLOAT_INC_DIR  ?= ../../flexfloat/include
LIBS = -lm  $(FLEXFLOAT_LIB_DIR)/libflexfloat.a -flto
CC = g++
CFLAGS = -O3 -std=c++11 -flto -I$(FLEXFLOAT_INC_DIR)

CONF_MODE ?= flags
OUTPUT_DIR ?= ./

ifeq ($(CONF_MODE),flags)
CFLAGS += -DEXP_TMPNORM=11 -DFRAC_TMPNORM=52  -DEXP_BNORM=11 -DFRAC_BNORM=52 -DEXP_NORM=11 -DFRAC_NORM=52
CFLAGS += -DEXP_GRID=11 -DFRAC_GRID=52 -DEXP_GRID_NEW=11 -DFRAC_GRID_NEW=52
CFLAGS += -DEXP_CONST1=11 -DFRAC_CONST1=52 -DEXP_CONST2=11 -DFRAC_CONST2=52 -DEXP_CONST3=11 -DFRAC_CONST3=52
CFLAGS += -DEXP_TEMP1=11 -DFRAC_TEMP1=52 -DEXP_TEMP2=11 -DFRAC_TEMP2=52 -DEXP_TEMP3=11 -DFRAC_TEMP3=52 -DEXP_TEMP4=11 -DFRAC_TEMP4=52 -DEXP_TEMP5=11 -DFRAC_TEMP5=52 -DEXP_TEMP6=11 -DFRAC_TEMP6=52 -DEXP_TEMP7=11 -DFRAC_TEMP7=52 -DEXP_TEMP8=11 -DFRAC_TEMP8=52 -DEXP_TEMP9=11 -DFRAC_TEMP9=52 -DEXP_TEMP10=11 -DFRAC_TEMP10=52 -DEXP_TEMP11=11 -DFRAC_TEMP11=52 -DEXP_TEMP12=11 -DFRAC_TEMP12=52 -DEXP_TEMP13=11 -DFRAC_TEMP13=52 -DEXP_TEMP14=11 -DFRAC_TEMP14=52 -DEXP_TEMP15=11 -DFRAC_TEMP15=52 -DEXP_TEMP16=11 -DFRAC_TEMP16=52 -DEXP_TEMP17=11 -DFRAC_TEMP17=52 
else
CFLAGS += $(EXT_CFLAGS)
endif


.PHONY: default all clean

default: $(TARGET)
all: default

SOURCES = jacobi_flex.cpp 
OBJECTS = $(patsubst %.cpp, $(OUTPUT_DIR)%.o, $(SOURCES))
HEADERS = $(wildcard *.h)

$(OUTPUT_DIR)%.o: %.cpp $(HEADERS)
	$(CC) $(CFLAGS) -c $< -o $@

.PRECIOUS: $(TARGET) $(OBJECTS)

$(TARGET): $(OBJECTS)
	$(CC) $(OBJECTS) -Wall $(LIBS) -o $(OUTPUT_DIR)$@

clean:
	-rm -f $(OUTPUT_DIR)*.o
	-rm -f $(OUTPUT_DIR)$(TARGET)

clean-all: clean
	-rm -rf mpi_data_* log.txt
